<script  type="text/x-handlebars-template" id="generic-textarea" data-partial-id="generic-textarea">
  <div class="form-group mb-0">
    <label for="{{data_key_name}}">{{input_label}}</label>
    <textarea class="form-control" id="{{data_key_name}}" name="{{data_key_name}}" rows="3"
    {{#each validations}}
      {{#when @key '==' 'required'}}
        {{#when this '==' true}}required{{else}} {{/when}}
      {{else}}
        {{@key}}="{{this}}"
      {{/when}}
    {{/each}}
    >{{{data_key_value}}}</textarea>
    <div class="is-error" data-field-name="{{data_key_name}}" data-forname="{{data_key_name}}"></div>
  </div>
</script>