<script type="text/x-handlebars-template" id="published_list_view">
  <div id="accordion">
    {{#each published_list_data}}
    <div class="card mb-3 published-mode">
      <div class="card-header" id="listHeading">
        <h5 class="mb-0">
          <button class="btn btn-link px-0" data-toggle="collapse" data-target="#published_rec_{{this.id}}" aria-expanded="true" aria-controls="published_rec_{{this.id}}">
            #{{math @index '+' 1}} {{this.heading}}
          </button>
        </h5>
      </div>
      <div id="published_rec_{{this.id}}" class="collapse show" aria-labelledby="listHeading" data-parent="#accordion">
        <div class="card-body">
          {{#each this.record}}
            {{#if this.display_value}}
          <div class="row pb-3">
            <div class="col-12">
              <h5 class="text-capitalize font-weight-bold mb-0">{{this.display_label}}:</h5>
              {{#if this.isImage}}
              <a href="{{this.display_value}}" target="_blank">{{this.display_value}}</a>
              <br />
              <img width="35%" src = "{{this.display_value}}"/>
              {{else if isGenericLink}}
              <a href="{{this.display_value}}" target="_blank">{{this.display_value}}</a>
              {{else if isColor}}
              <div style="height:20px;width:50px;background-color:{{this.display_value}};" />
              {{else if isTimeStamp}}
              {{{getDate this.display_value}}}
              {{else}}
              <span class="font-weight-light">{{{this.display_value}}}</span>
              {{/if}}
            </div>
          </div>
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</script>