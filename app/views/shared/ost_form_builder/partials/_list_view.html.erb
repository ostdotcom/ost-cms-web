<script type="text/x-handlebars-template" id="list_view">
    <div id="accordion">
      {{#each list_data}}
        <div class="card mb-3 draft-mode">
          <div class="card-header" id="listHeading">
            <h5 class="mb-0">
              <button class="btn btn-link px-0" data-toggle="collapse" data-target="#record_{{this.id}}" aria-expanded="false" aria-controls="{{this.id}}">
                #<span class="record-index">{{math @index '+' 1}}</span> {{this.heading}}
              </button>
            </h5>
          </div>
          <div id="record_{{this.id}}" class="collapse hide" aria-labelledby="listHeading" data-parent="#accordion">
            <div class="card-body">
              <div class="row">
                <div class="col-8">
                  {{#each this.record}}
                  {{#if this.display_value}}
                  <div class="row pb-1">
                    <div class="col-2"><span class="text-capitalize font-weight-bold">{{this.display_label}}:</span></div>
                    <div class="col-10"><span class="font-weight-light">{{this.display_value}}</span></div>
                  </div>
                  {{/if}}
                  {{/each}}
                </div>
                <div class="col-4">
                <span class="float-right align-text-top">
                  <button class="btn btn-primary j-edit-button mb-3" name="Edit" data-toggle="modal" data-target="#genericModal" data-id="{{this.id}}">Edit</button>
                  <button class="btn btn-secondary j-delete-button mb-3" name="Delete" data-id="{{this.id}}">Delete</button>
                </span>
                </div>
              </div>
              <span class="ui-icon ui-icon-arrowthick-2-n-s float-right"></span>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
</script>