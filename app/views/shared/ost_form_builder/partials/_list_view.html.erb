<script type="text/x-handlebars-template" id="list_view">
    <div id="accordion">
      {{#each list_data}}
        <div class="card mb-3 draft-mode" data-record-id="{{this.id}}">
          <span class="ml-2"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></span>
          <div class="card-header pt-0" id="listHeading">
            <h5 class="mb-0">
              <button class="btn btn-link px-0 pt-0" data-toggle="collapse" data-target="#record_{{this.id}}" aria-expanded="false" aria-controls="record_{{this.id}}">
                #<span class="record-index">{{math @index '+' 1}}</span> {{{this.heading}}}
              </button>
              <span class="float-right align-text-top">
                  <a class="j-edit-link mb-3 mr-2" name="Edit" data-toggle="modal" data-target="#genericModal" data-id="{{this.id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                  <a class="j-delete-link mb-3" name="Delete" data-id="{{this.id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
              </span>
            </h5>
          </div>
          <div id="record_{{this.id}}" class="collapse hide" aria-labelledby="listHeading" data-parent="#accordion">
            <div class="card-body">
              {{#each this.record}}
                {{#if this.display_value}}


                  <div class="row pb-3">
                    <div class="col-12">
                      <h5 class="text-capitalize font-weight-bold mb-0">{{this.display_label}}:</h5>
                      {{#if this.isImage}}
                        <a href="{{this.display_value}}" target="_blank">{{this.display_value}}</a>
                        <br />
                        <img width="35%" src = "{{this.display_value}}"/>
                      {{else if isGenericLink}}
                        <a href="{{this.display_value}}" target="_blank">{{this.display_value}}</a>
                      {{else if isColor}}
                        <div style="height:20px;width:50px;background-color:{{this.display_value}};" />
                      {{else if isTimeStamp}}
                        {{{getDate this.display_value}}}
                      {{else}}
                        <span class="font-weight-light">{{{this.display_value}}}</span>
                      {{/if}}
                    </div>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
</script>