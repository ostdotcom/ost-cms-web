<script  type="text/x-handlebars-template" id="list_view">
    {{#each list_data}}
      <li class="mb-3 ordered-list-item" id="{{this.id}}" >
        <div class="card ui-state-default ">
          <div class="card-body">
            <div class="row">
              <div class="col-8">
                {{#each this.record}}
                  {{#if this.display_value}}
                  <div class="row pb-1">
                    <div class="col-2"><span class="text-capitalize font-weight-bold">{{this.display_label}}:</span></div>
                    <div class="col-10"><span class="font-weight-light">{{this.display_value}}</span></div>
                  </div>
                  {{/if}}
                {{/each}}
              </div>
              <div class="col-4">
                <span class="float-right align-text-top">
                  <button class="btn btn-primary mb-3" name="Edit" data-toggle="modal" data-target="#genericModal" data-id="{{this.id}}">Edit</button>
                  <button class="btn btn-secondary mb-3" name="Delete" data-id="{{this.id}}">Delete</button>
                </span>
              </div>
            </div>
            <span class="ui-icon ui-icon-arrowthick-2-n-s float-right"></span>
          </div>
        </div>
        </li>
    {{/each}}
</script>
