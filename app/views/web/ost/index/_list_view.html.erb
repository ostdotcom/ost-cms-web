<script  type="text/x-handlebars-template" id="list_view">
    {{#each list_data}}
      <li class="mb-3 ordered-list-item" >
        <div class="card ui-state-default ">
          <div class="card-body">
            <div class="row">
              <div class="col-8">
                {{#each this.record}}
                  <p class="text-capitalize">{{this.display_label}} : {{this.display_value}}</p>
                {{/each}}
              </div>
              <div class="col-4">
                <span class="float-right align-text-top">
                  <button class="btn btn-primary mb-3" name="Edit" data-toggle="modal" data-target="#editModal">Edit</button>
                  <button class="btn btn-secondary mb-3" name="Delete">Delete</button>
                </span>
              </div>
            </div>
            <span class="ui-icon ui-icon-arrowthick-2-n-s float-right"></span>
          </div>
        </div>
        </li>
    {{/each}}
</script>
